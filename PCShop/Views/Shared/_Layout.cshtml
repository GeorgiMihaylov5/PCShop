@using Microsoft.AspNetCore.Identity;
@using PCShop.Entities;
@inject SignInManager<User> SignInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PCShop</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PCShop.styles.css" asp-append-version="true" />
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-toggleable-md navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand font-weight-bolder" asp-area="" asp-controller="Home" asp-action="Index">PC SHOP <i class="fa-solid fa-computer" style="color: #2196f3"></i></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-md-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="AboutUs">About us</a>
                        </li>
                        <li class="pointer nav-item active">
                            <div class="dropdown show">
                                <a class="nav-link text-dark dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                                    Products
                                </a>

                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="Products" asp-action="All">All</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="Products" asp-action="AllByCategory" asp-route-category="PC">PC</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="Products" asp-action="AllByCategory" asp-route-category="Laptop">Laptops</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Products" asp-action="AllByCategory" asp-route-category="Component">Components</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Products" asp-action="AllByCategory" asp-route-category="Periphery">Peripheries</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="Products" asp-action="AllByCategory" asp-route-category="Accessory">Accessories</a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Products" asp-action="AllDiscounts">Discount</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contacts">Contacts</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <form class="form-inline" asp-action="Profile" asp-controller="Users" title="Manage" method="get">
                                    <button type="submit" class="nav-link btn btn-link text-dark"><i class="fa-solid fa-user"></i> @User.Identity.Name</button>
                                </form>
                            </li>
                            <li class="nav-item">
                                <form class="form-inline" asp-action="Logout" asp-controller="Users">
                                    <button type="submit" class="nav-link btn btn-link text-dark">Logout <i class="fa-solid fa-right-from-bracket"></i></button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-action="Register" asp-controller="Users">Register</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-action="Login" asp-controller="Users">Login</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-action="ShoppingCart" asp-controller="Orders"><i class="bi bi-cart-check-fill" id="basket"></i></a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - PCShop - <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
        </div>
    </footer>
    <script src="https://kit.fontawesome.com/2ca93d86e5.js" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
