@model IEnumerable<ProductVM>

@{
    ViewData["Title"] = "Products";
}

<div class="d-lg-inline-block align-top col-3" id="filter-left">
    @await Html.PartialAsync("~/Views/Users/_ManageLayoutPartialView.cshtml")
</div>
<div class="d-lg-inline-block align-top col-md-8 m-auto" style="width: 72%;">
    @await Html.PartialAsync("~/Views/Users/_ControlPanelPartialView.cshtml")

    <div class="alert alert-info" style="margin-top: 25px">
        <h2 style="text-align: center">Products - @Model.Count()</h2>
    </div>

    <div class="text-center" style="margin-bottom: 20px">
        <a asp-action="Create" asp-controller="Products" class="btn btn-outline-dark">Create Product</a>
    </div>
    <div id="message-box">
    </div>
    <div class="table-responsive">
        <table class="table table-hover text-center">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Category)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Model)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Discount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AddedOn)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Quantity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Image)
                    </th>
                    <th>Promotion</th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Category)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Model)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Discount)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.AddedOn)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Quantity)
                        </td>
                        <td class="align-middle">
                            <img src="@item.Image" width="50" height="50" />
                        </td>
                        <td class="align-middle">
                            <a asp-controller="Products" asp-action="AddDiscount" asp-route-id="@item.Id" class="btn btn-success btn-sm">%</a>
                            <a asp-controller="Products" asp-action="RemoveDiscount" asp-route-id="@item.Id" class="btn btn-danger btn-sm">%</a>
                        </td>
                        <td class="align-middle">
                            <a asp-action="Edit" asp-controller="Products" asp-route-id="@item.Id"><i class="bi bi-pencil-square text-success"></i></a>
                        </td>
                        <td class="align-middle" style="padding: 7px">
                            <a asp-action="Delete" asp-controller="Products" asp-route-id="@item.Id"><i class="bi bi-trash-fill"></i></a>
                        </td>
                        <td class="align-middle">
                            <a asp-action="Details" asp-controller="Products" asp-route-id="@item.Id"><i class="fa-solid fa-circle-info text-info"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>